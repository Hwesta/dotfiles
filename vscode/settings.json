{
    "cSpell.language": "en,en-CA,en-US",
    "debug.allowBreakpointsEverywhere": true,
    "debug.console.acceptSuggestionOnEnter": "on",
    "debug.saveBeforeStart": "nonUntitledEditorsInActiveGroup",
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.formatOnSave": true,
    "editor.renderWhitespace": "selection",
    "editor.rulers": [
        80,
        120
    ],
    "editor.wordWrap": "on",
    "explorer.autoReveal": false,
    "explorer.excludeGitIgnore": true,
    "files.autoSave": "onFocusChange",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.autoStash": true,
    "redhat.telemetry.enabled": false,
    "vsicons.dontShowNewVersionMessage": true,
    "window.restoreWindows": "all",
    "workbench.activityBar.location": "top",
    "workbench.colorTheme": "fairyfloss",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorCustomizations": {
        "editor.findMatchBackground": "#ffb8d155",
    },
    "workbench.editor.tabSizing": "shrink",
    "[html]": {
        "editor.formatOnType": false
    },
    "[markdown]": {
        "files.trimTrailingWhitespace": false
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnType": false,
        "editor.codeActionsOnSave": {
            "source.organizeImports.isort": "always"
        }
    },
    "python.analysis.autoFormatStrings": true,
    "python.analysis.diagnosticSeverityOverrides": { // Prefer mypy over pylance
        "reportOptionalMemberAccess": "none",
        "reportGeneralTypeIssues": "none"
    },
    "python.experiments.optOutFrom": [
        "pythonTestAdapter" // Broke pytest
    ],
    "python.testing.pytestEnabled": true,
    "black-formatter.showNotifications": "onWarning",
    "isort.check": true,
    "mypy-type-checker.importStrategy": "fromEnvironment",
    "mypy-type-checker.reportingScope": "workspace",
    "[ruby]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoClosingBrackets": "always",
        "editor.autoClosingQuotes": "always",
    },
    "[sql]": {
        "editor.defaultFormatter": "adpyke.vscode-sql-formatter",
        "editor.formatOnSave": false // Don't like its formatting
    },
    "sql-formatter.uppercase": true,
    "yaml.customTags": [
        "!reference sequence" // For gitlab-ci.yml
    ],
    "gitlens.menus": {
        "editor": {
            "blame": true,
            "clipboard": false,
            "compare": true,
            "history": false,
            "remote": false,
            "details": false
        },
        "editorGroup": {
            "blame": true,
            "compare": true
        },
        "editorGutter": {
            "compare": true,
            "remote": true,
            "share": true
        },
        "editorTab": false,
        "explorer": {
            "clipboard": false,
            "compare": false,
            "history": false,
            "remote": true
        },
        "ghpr": {
            "worktree": true
        },
        "scm": {
            "graph": true
        },
        "scmRepositoryInline": {
            "graph": true
        },
        "scmRepository": {
            "authors": true,
            "generateCommitMessage": true,
            "graph": false
        },
        "scmGroupInline": {
            "stash": true
        },
        "scmGroup": {
            "compare": true,
            "openClose": true,
            "stash": true,
            "stashInline": true
        },
        "scmItemInline": {
            "stash": false
        },
        "scmItem": {
            "clipboard": true,
            "compare": false,
            "history": false,
            "remote": true,
            "share": true,
            "stash": true
        }
    },
    "gitlens.advanced.fileHistoryFollowsRenames": true,
    "gitlens.blame.highlight.locations": [
        "line",
        "overview",
        "gutter"
    ],
    "gitlens.codeLens.enabled": false, // turn off the annoying popup
    "gitlens.codeLens.scopes": [
        "document",
        "containers"
    ],
    "gitlens.heatmap.toggleMode": "window",
    "gitlens.hovers.enabled": false,
    "gitlens.keymap": "alternate",
    "gitlens.plusFeatures.enabled": false,
}